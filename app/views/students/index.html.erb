<div style="width: 80%; margin: auto;">
<h1>Todos os estudantes</h1>  
<table> 
  <table class="table table-dark" >
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Matricula</th>
      <th scope="col">Course</th>
      <th scope="col">Detalhes</th>            
      <th scope="col">Novo Estudante</th>    
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <% if student.perfil_publico == "N" %>
      <tr>
        <td><%= student.nome %></td>
        <td><%= student.matricula %></td>              
        <td><%= student.course.nome %></td>
        <td><%= link_to 'Detalhes', student %></td>                
        <td><%= link_to 'Novo Estudante', new_student_path %></td>  
      </tr>
    <% end -%>
    <% end %>
  </tbody>
</table>  
</div>
